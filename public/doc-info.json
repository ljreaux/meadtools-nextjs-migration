        "auth": "Required (Admin only)",
        "response": {
          "200": { "message": "User deleted successfully" },
          "403": { "error": "Unauthorized access" },
          "404": { "error": "User not found" },
          "500": { "error": "Failed to delete user" }
        }
      }
    ],
